{
  "name": "lingxi",
  "version": "0.1.8",
  "description": "灵析 - 具备屏幕感知能力的桌面AI助手",
  "main": "dist/electron/main.js",
  "author": "哈雅 (263321)",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.node.json",
    "build:electron": "tsc -p tsconfig.node.json",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron dist/electron/main.js\"",
    "electron:build": "npm run build && electron-builder",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "axios": "^1.13.2",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "eventsource": "^4.1.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.24.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eventsource": "^4.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.alibaba.lingxi",
    "productName": "灵析",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "materials/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "materials/image/icon_dog_2.png",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
